@model CoverType

<form method="post" asp-action="Edit">
    <div class="border p-3 mt-4">
        <div class="row p-2">
            <h2 class="text-primary">Edit Cover Type</h2>
            <hr />
        </div>
        <div asp-validation-summary="All"> </div>
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px">Edit Cover Type</button>
        <a asp-action="Index" asp-controller="CoverType" class="btn btn-secondary" style="width:150px"> Bact To List</a>
    </div>
</form>

@section Scripts{ 
    @{ 
        <partial name="_ValidationScriptsPartial"/>
    }
}